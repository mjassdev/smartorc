<script type="text/javascript">$(document).ready(function () {
        $("#cliente").hide();
        $("#sinapi").hide();
    });



    function selecionar(uf) {
        var combo = document.getElementById("selectBase");
        for (var i = 0; i < combo.options.length; i++) {
            if (combo.options[combo.selectedIndex].value == 1) {
                $("#sinapi").show();
                $("#cliente").hide();
                break;
            }
            if (combo.options[combo.selectedIndex].value == 2) {
                $("#sinapi").hide();
                $("#cliente").show();
                break;
            }
            else {
                $("#cliente").hide();
                $("#sinapi").hide();
            }
        }
    }

    function busca() {
        $("#sinapibusca").show();
    }</script>