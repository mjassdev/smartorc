<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Insumo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <label>Base:</label>
                    <select id="selectBase" onchange="selecionar(value)" class="browser-default custom-select">
                        <option selected>Selecione uma base</option>
                        <option value="1">SINAPI</option>
                        <option value="2">CLIENTE</option>
                    </select>
                    <div id="sinapi" class="form-inline" style="display: none">

                        <div class="input-group md-form form-sm form-1 pl-0 col-12" style="margin-top: 20px">
                            <div class="input-group-prepend">
                                <span class="input-group-text cyan lighten-2" id="basic-text1">
                                    <i class="fas fa-search text-white"
                                       aria-hidden="true"></i>
                                </span>
                            </div>
                            <input class="form-control my-0 py-1" type="text" placeholder="Digite um insumo para busca" aria-label="Search" onKeyPress="busca()">
                        </div>

                        <div id="sinapibusca" style="display: none">
                            <div class="form-group">
                                <label>Descrição:</label>
                                <label class="label-form">Tijolo cerâmico maciço 5x10x20cm</label>
                            </div>
                            <div class="form-group">
                                <label>Tipo:</label>
                                <label class="label-form">Material</label>
                            </div>
                            <div class="form-group">
                                <label>Unidade:</label>
                                <label class="label-form">Un</label>
                            </div>
                            <div class="form-group">
                                <label>Índice</label>
                                <input type="text" class="form-control label-form" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label>Custo Unitário</label>
                                <label class="label-form">R$ 0,27</label>
                            </div>
                        </div>

                    </div>
                    <div id="cliente" style="display: none">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Descrição</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Tipo:</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Unidade</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
