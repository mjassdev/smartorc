@page
@{
    ViewData["Title"] = "Orçamento";
}



<style>







    .img-card-div {
        margin-top: 30px
    }

    .img-card {
        height: 200px;
        width: 200px;
        object-fit: cover;
        border-radius: 100%;
        margin-bottom: 20px
    }

    nav-link {
        color: gray !important
    }

    .aba {
        color: gray !important
    }

    .tab-pane {
        padding: 20px
    }

    .span-cabecalho {
        margin-left: 5px;
        margin-right: 20px;
        margin-top: 20px
    }
</style>



<div style="margin-top: 50px">
    <div class="row ">
        <div class="col-1" style="padding-left: 0px">
            <img src="../imagens/default.png" style="height: 100px; width: 100px; border-radius:100px; object-fit: cover; border: 5px solid white" />
        </div>
        <div class="col" style="margin-left: 30px">
            <h4>
                Obra: Residencial Continental
            </h4>
            <h5>
                Cliente: Matheus José
            </h5>
            <h5>
                Endereço: 1101 Sul Av NS 01
            </h5>
            <h5>
                Tipo: Residencial Condominial
            </h5>
        </div>
        <div class="col-md-2">
            <a class="btn btn-info text-white">Compilar Orçamento</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary text-white">Nova Composição</a>
    </div>
</div>


<ul class="nav nav-tabs" id="myTab" role="tablist" style="margin-top: 30px">
    <li class="nav-item">
        <a class="nav-link active aba" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Alvenaria de Embasamento</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aba" id="profile-tab" data-toggle="tab" href="#perfil" role="tab" aria-controls="profile" aria-selected="false">Aplicação de Massa Corrida</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aba" id="contact-tab" data-toggle="tab" href="#contato" role="tab" aria-controls="contact" aria-selected="false">Aplicação de louças</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="row">
            <div class="col-md-6">
                <a><span class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">Adicionar Insumo</span></a>
            </div>
            <div class="col-md-6 text-right">
                <a><span class="badge badge-danger">Remover essa composição</span></a>
            </div>
        </div>
        <div class="row">
            <label class="span-cabecalho"> Base: <span class="badge badge-primary">SINAPI</span></label>
            <label class="span-cabecalho">Código: <span class="badge badge-primaty">9876</span></label>
            <label class="span-cabecalho">Referência: <span class="badge badge-primary">09/01/2020</span></label>
            <label class="span-cabecalho">Localidade: <span class="badge badge-primary">Palmas-TO</span></label>
        </div>
        <h2>
            Alvenaria de Embasamento em tijolos cerâmicos maciços 5x10x20cm, assentado com argamassa traço 1:2:8
        </h2>
        <h4 style="background-color: gray; width: auto; padding: 10px" class="text-white col-md-2 text-center">Unidade: m3</h4>
        <h4>Insumos Lançados</h4>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th class="text-center">ITEM</th>
                        <th class="text-center">INSUMO</th>
                        <th class="text-center">TIPO</th>
                        <th class="text-center">UNIDADE</th>
                        <th class="text-center">ÍNDICE</th>
                        <th class="text-center">CUSTO UNITÁRIO (R$)</th>
                        <th class="text-center">CUSTO TOTAL (R$)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">1</td>
                        <td>Tijolo cerâmico maciço 5x10x20cm</td>
                        <td class="text-center">Material</td>
                        <td class="text-center">Un</td>
                        <td class="text-center">795</td>
                        <td class="text-center">R$ 0,27</td>
                        <td class="text-center">R$ 214,65</td>
                    </tr>
                    <tr>
                        <td class="text-center">2</td>
                        <td>Argamassa traço 1:2:8 (cimento, cal e areia média)</td>
                        <td class="text-center">Material</td>
                        <td class="text-center">m3</td>
                        <td class="text-center">0,285</td>
                        <td class="text-center">R$ 317,70</td>
                        <td class="text-center">R$ 90,54</td>
                    </tr>
                    <tr>
                        <td class="text-center">3</td>
                        <td>Pedreiro</td>
                        <td class="text-center">Mão de Obra</td>
                        <td class="text-center">h</td>
                        <td class="text-center">7</td>
                        <td class="text-center">R$ 16,81</td>
                        <td class="text-center">R$ 117,67</td>
                    </tr>
                    <tr>
                        <td class="text-center">4</td>
                        <td>Servente</td>
                        <td class="text-center">Mão de Obra</td>
                        <td class="text-center">h</td>
                        <td class="text-center">7</td>
                        <td class="text-center">R$ 12,01</td>
                        <td class="text-center">R$ 84,07</td>
                    </tr>
                    <tr class="text-center text-white" style="background-color: black">
                        <td colspan="6">TOTAL</td>
                        <td>
                            <h4>
                                506,93 /m3
                            </h4>
                        </td>
                    </tr>


                </tbody>
            </table>
        </div>



    </div>
    <div class="tab-pane fade" id="perfil" role="tabpanel" aria-labelledby="profile-tab">...</div>
    <div class="tab-pane fade" id="contato" role="tabpanel" aria-labelledby="contact-tab">...</div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Insumo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <label>Base:</label>
                    <select class="browser-default custom-select">
                        <option selected>SINAPI</option>
                        <option value="1">TESTE 2</option>
                        <option value="2">TESTE 3</option>
                        <option value="3">CLIENTE</option>
                    </select>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a asp-page="/NovoOrcamento" class="btn btn-primary">Lançar</a>
            </div>
        </div>
    </div>
</div>