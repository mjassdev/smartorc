@page
@model PrivacyModel
@{
    ViewData["Title"] = "Orçamentos";
}

<style>

    .jumbotron {
        background-color: white !important;
        padding-bottom: 0px
    }

    .img-card-div {
        margin-top: 30px
    }

    .img-card {
        height: 200px;
        width: 200px;
        object-fit: cover;
        border-radius: 100%;
        margin-bottom: 20px
    }
    .check{
        margin-right: 10px
    }
</style>

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1>Meus Orçamentos</h1>
